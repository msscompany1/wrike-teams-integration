{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "Create a Wrike Task",
      "weight": "Bolder",
      "size": "Large"
    },
    {
      "type": "Input.Text",
      "id": "title",
      "placeholder": "Enter task title",
      "isRequired": true,
      "label": "Task Title",
      "errorMessage": "Title is required"
    },
    {
      "type": "Input.Text",
      "id": "description",
      "placeholder": "Autofilled from message",
      "label": "Task Description",
      "isMultiline": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "location",
      "style": "compact",
      "isMultiSelect": false,
      "label": "Location (Wrike Project/Folder)",
      "choices": [
        {
          "title": "Loading...",
          "value": "loading"
        }
      ]
    },
    {
      "type": "Input.ChoiceSet",
      "id": "assignee",
      "style": "compact",
      "isMultiSelect": false,
      "label": "Assignee",
      "choices": [
        {
          "title": "Loading...",
          "value": "loading"
        }
      ]
    },
    {
      "type": "Input.Date",
      "id": "startDate",
      "label": "Start Date"
    },
    {
      "type": "Input.Date",
      "id": "dueDate",
      "label": "Due Date"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "status",
      "label": "Task Status",
      "style": "compact",
      "choices": [
        {
          "title": "Active",
          "value": "Active"
        },
        {
          "title": "Planned",
          "value": "Planned"
        },
        {
          "title": "Completed",
          "value": "Completed"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Create Task"
    }
  ]
}