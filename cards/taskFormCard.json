{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Input.Text",
      "id": "title",
      "label": "Task Title",
      "placeholder": "Enter task title",
      "isRequired": true,
      "errorMessage": "Title is required"
    },
   
    {
      "type": "Input.ChoiceSet",
      "id": "location",
      "label": "Location (Project/Folder)",
      "style": "compact",
      "choices": [],
      "isRequired": true,
      "errorMessage": "Please select a location"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "assignee",
      "label": "Assignees",
      "style": "compact",
      "isMultiSelect": true,
      "choices": [],
      "isRequired": true,
      "errorMessage": "Please select at least one assignee"
    },
    
    {
      "type": "Input.Date",
      "id": "startDate",
      "label": "Start Date",
      "isRequired": true,
      "errorMessage": "Start date is required"
    },
    {
      "type": "Input.Date",
      "id": "dueDate",
      "label": "Due Date",
      "isRequired": true,
      "errorMessage": "Due date is required"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "status",
      "label": "Task Status",
      "style": "compact",
      "choices": [
        {
          "title": "Active",
          "value": "Active"
        },
        {
          "title": "Planned",
          "value": "Planned"
        },
        {
          "title": "Completed",
          "value": "Completed"
        }
      ],
      "isRequired": true,
      "errorMessage": "Please select a status"
    },
    {
      "type": "Input.Text",
      "id": "description",
      "label": "Task Description",
      "isMultiline": true,
      "placeholder": "Enter task details",
      "isRequired": true,
      "errorMessage": "Description is required"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Create Task",
      "data": {
        "commandId": "create-wrike-task"
      }
    }
  ]
}