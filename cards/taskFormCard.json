{
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "Create Wrike Task",
      "weight": "Bolder",
      "size": "Large"
    },
    {
      "type": "Input.Text",
      "id": "title",
      "placeholder": "Task title (auto-filled from message)",
      "isRequired": true,
      "label": "Task Title"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "location",
      "label": "Location (Folder/Project)",
      "style": "compact",
      "choices": [],
      "isRequired": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "assignee",
      "label": "Assign To",
      "style": "compact",
      "choices": [],
      "isRequired": true
    },
    {
      "type": "Input.Date",
      "id": "startDate",
      "label": "Start Date"
    },
    {
      "type": "Input.Date",
      "id": "dueDate",
      "label": "Due Date"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "status",
      "label": "Task Status",
      "style": "compact",
      "choices": [
        { "title": "Active", "value": "Active" },
        { "title": "Planned", "value": "Planned" },
        { "title": "Completed", "value": "Completed" }
      ],
      "value": "Active"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Create Task",
      "data": {
        "commandId": "create-wrike-task"
      }
    }
  ]
}
