{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "Create Wrike Task",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "Input.Text",
      "id": "title",
      "placeholder": "Enter task title",
      "label": "Task Title *",
      "isRequired": true,
      "errorMessage": "Task title is required"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "location",
      "label": "Location (Folder/Project)",
      "style": "compact",
      "isRequired": true,
      "choices": [
        {
          "title": "Loading...",
          "value": ""
        }
      ],
      "errorMessage": "Please select a location"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "assignee",
      "label": "Assign To",
      "style": "compact",
      "isRequired": true,
      "choices": [
        {
          "title": "Loading...",
          "value": ""
        }
      ],
      "errorMessage": "Please select an assignee"
    },
    {
      "type": "Input.Date",
      "id": "startDate",
      "label": "Start Date"
    },
    {
      "type": "Input.Date",
      "id": "dueDate",
      "label": "Due Date"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "status",
      "label": "Task Status",
      "style": "compact",
      "value": "Active",
      "choices": [
        {
          "title": "Active",
          "value": "Active"
        },
        {
          "title": "Planned",
          "value": "Planned"
        },
        {
          "title": "Completed",
          "value": "Completed"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Create Task",
      "data": {
        "commandId": "create-wrike-task"
      }
    }
  ]
}
