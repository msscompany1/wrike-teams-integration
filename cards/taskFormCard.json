{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "Create a Wrike Task",
      "weight": "Bolder",
      "size": "Large"
    },
    {
      "type": "Input.Text",
      "id": "title",
      "placeholder": "Enter task title",
      "label": "Title",
      "isRequired": true,
      "errorMessage": "Title is required"
    },
    {
      "type": "Input.Text",
      "id": "description",
      "placeholder": "Enter task description",
      "label": "Description",
      "isMultiline": true,
      "isRequired": true,
      "errorMessage": "Description is required"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "location",
      "label": "Location (Project/Folder)",
      "style": "compact",
      "choices": [],
      "isRequired": true,
      "errorMessage": "Please select a location"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "assignee",
      "label": "Assignee",
      "style": "compact",
      "choices": [],
      "isRequired": true,
      "errorMessage": "Please select an assignee"
    },
    {
      "type": "Input.Date",
      "id": "startDate",
      "label": "Start Date"
    },
    {
      "type": "Input.Date",
      "id": "dueDate",
      "label": "Due Date"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "status",
      "label": "Status",
      "style": "expanded",
      "choices": [
        {
          "title": "Active",
          "value": "Active"
        },
        {
          "title": "Planned",
          "value": "Planned"
        },
        {
          "title": "Completed",
          "value": "Completed"
        }
      ],
      "isRequired": true,
      "errorMessage": "Status is required"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Create Task",
      "data": {
        "commandId": "create-wrike-task"
      }
    }
  ]
}